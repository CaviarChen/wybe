# aliasing data structure in a proc

use position

public proc replicate(p1:position, ?p2:position) use !io
  ?pp = position(0,0)
  !print("random print")
  !println(pp.x)
  ?p2 = p1
end

public proc bar use !io
  ?p1 = position(101,102)
  !replicate(p1, ?p2)

  x(!p1, 555)
  !println(p1.x) # expected 555 - is 555
  !println(p2.x) # expected 101 - but is 555
end

!bar